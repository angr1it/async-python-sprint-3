{
	"name": "chat",
	"dockerComposeFile": [
		"../docker-compose.yml"
	  ], 
	"service": "debug_app",
	"runServices": ["debug_app"],
	"workspaceFolder": "/code",
	"customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "ms-python.flake8",
                "ms-python.black-formatter"
            ]
        }
    }
}